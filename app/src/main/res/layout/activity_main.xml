<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".database.ui.dangki"
    android:background="@color/bg2"
    android:id="@+id/FL1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:text="Đăng nhập để tiếp tục"
            android:textColor="@color/bg1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meo Thần Tài"
            android:fontFamily="@font/baloo"
            android:textSize="45sp"
            android:textColor="@color/bg1"
            />
    </LinearLayout>
    <ImageView
        android:src="@drawable/meo2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="60dp"
        />
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="350dp"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/border"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:fontFamily="@font/poppins"
            android:textColor="@color/bg2"
            android:textSize="35sp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="35dp"/>
        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/paws"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="-50dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/bg2"
            android:textSize="15sp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/email2"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:hint="  hello@reallygreatsite.com"
            android:fontFamily="@font/poppinsregular"
            android:background="@drawable/border2"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/bg2"
            android:textSize="15sp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/password2"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:hint="  ******"
            android:fontFamily="@font/poppinsregular"
            android:background="@drawable/border2"
            android:layout_marginLeft="35dp"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_marginTop="10dp"
            />
        <Button
            android:id="@+id/login"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/bg2"
            android:text="Đăng nhập"
            android:textColor="@color/bg1"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginLeft="125dp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="625dp"
        android:layout_marginLeft="125dp"
        >
        <Button
            android:id="@+id/quen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/bg2"
            android:text="Quên mật khẩu?"
            android:textColor="@color/bg1"
            android:fontFamily="@font/poppinsregular"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="650dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chưa có tài khoản?"
            android:textColor="@color/bg1"
            />
        <Button
            android:id="@+id/singin1"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/bg2"
            android:text="Đăng  kí"
            android:textColor="@color/bg1"
            android:fontFamily="@font/poppins"/>
    </LinearLayout>

</FrameLayout>