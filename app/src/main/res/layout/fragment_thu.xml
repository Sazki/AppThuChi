<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".database.ui.thu"
    android:background="@color/bg2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày"
            android:textColor="@color/bg1"
            android:textSize="18sp"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginLeft="3dp"
            />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/border5"
            android:layout_marginLeft="15dp"
            >

            <ImageView
                android:id="@+id/btn_prev1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="4dp"
                android:src="@drawable/icon2"/>

            <TextView
                android:id="@+id/tv_date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="08/12/2025 (Th 2)"
                android:textSize="18sp"
                android:textColor="@color/bg1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/poppinsregular"/>

            <ImageView
                android:id="@+id/btn_next1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="4dp"
                android:src="@drawable/icon1" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="75dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghi chú"
            android:textSize="18sp"
            android:textColor="@color/bg1"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginLeft="-3dp"

            />
        <EditText
            android:layout_width="225dp"
            android:layout_height="35dp"
            android:background="@drawable/border5"
            android:layout_marginLeft="5dp"
            android:hint=" ......"
            android:textColor="@color/bg1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="120dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiền thu"
            android:textColor="@color/bg1"
            android:fontFamily="@font/poppinsregular"
            android:textSize="18sp"
            android:layout_marginLeft="13dp"/>
        <EditText
            android:layout_width="225dp"
            android:layout_height="35dp"
            android:background="@drawable/border5"
            android:layout_marginLeft="12dp"
            android:hint=" 0"
            android:textColor="@color/bg1"
            android:inputType="number"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  đ"
            android:textColor="@color/bg1"
            android:fontFamily="@font/poppinsregular"
            android:textSize="18sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="165dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh mục:"
            android:textColor="@color/bg1"
            android:fontFamily="@font/poppinsregular"
            android:textSize="18sp"
            android:layout_marginLeft="13dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvdanhmuc1"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center"
            tools:ignore="SpeakableTextPresentCheck"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Nhập khoản thu"
                android:textColor="@color/bg2"
                android:fontFamily="@font/poppinsregular"
                android:backgroundTint="@color/bg1"
                android:textSize="18sp"
                />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>