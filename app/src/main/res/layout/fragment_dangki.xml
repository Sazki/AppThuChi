<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".database.ui.dangki"
    android:background="@color/bg2"
    android:id="@+id/FL4">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginTop="40dp">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsregular"
        android:text="wellcome to"
        android:textColor="@color/bg1"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meo Thần Tài"
        android:fontFamily="@font/baloo"
        android:textSize="45sp"
        android:textColor="@color/bg1"
        />
</LinearLayout>
    <ImageView
        android:src="@drawable/meo2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="60dp"
        />
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="500dp"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/border"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng kí"
            android:fontFamily="@font/poppins"
            android:textColor="@color/bg2"
            android:textSize="35sp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="35dp"/>
        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/paws"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="-50dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên tài khoản"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/bg2"
            android:textSize="15sp"
            android:layout_marginLeft="35dp"/>
        <EditText
            android:id="@+id/name1"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:hint="  Nguyen Van A"
            android:fontFamily="@font/poppinsregular"
            android:background="@drawable/border2"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/bg2"
            android:textSize="15sp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/email1"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:hint="  hello@reallygreatsite.com"
            android:fontFamily="@font/poppinsregular"
            android:background="@drawable/border2"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/bg2"
            android:textSize="15sp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/password1"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:hint="  ******"
            android:fontFamily="@font/poppinsregular"
            android:background="@drawable/border2"
            android:layout_marginLeft="35dp"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_marginTop="10dp"
            />
        <Button
            android:id="@+id/next"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/bg2"
            android:text="Tiếp tục"
            android:textColor="@color/bg1"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginLeft="135dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã có tài khoản?"
            android:textColor="@color/bg2"
            />
        <Button
            android:id="@+id/singin"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/bg1"
            android:text="Đăng nhập"
            android:textColor="@color/bg2"
            android:fontFamily="@font/poppins"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>